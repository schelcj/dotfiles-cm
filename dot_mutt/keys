bind index ' ' next-page
bind index - previous-page
bind index n next-entry
bind index p previous-entry
bind index \Cv collapse-thread
bind index D delete-thread
bind index B last-entry
bind index y copy-message
bind index zc collapse-thread
bind index zm collapse-all

bind pager n next-entry
bind pager p previous-entry
bind pager , exit
bind pager \Cw search
bind pager <down> next-line
bind pager <up> previous-line
bind pager j next-line
bind pager k previous-line
bind pager \Cp print-message
bind pager gg top
bind pager G bottom
bind pager g group-reply

bind browser ' ' next-page
bind browser - previous-page
bind browser n next-entry
bind browser p previous-entry
